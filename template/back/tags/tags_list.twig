{% extends "layout.twig" %}
{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Имя метки</th>
            <th scope="col">Статей с этой меткой</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tag_list %}
            <tr>

                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.count }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <button class="btn btn-danger" type="button" data-coreui-toggle="tooltip" data-coreui-placement="Edit" data-coreui-original-title="Tooltip on top">
                            <a href="" style="color: black" class="btn btn-danger" data-coreui-toggle="tooltip" data-coreui-placement="Edit" data-coreui-original-title="Tooltip on top">
                                <i class="fa-solid fa-pencil"> </i>
                            </a>
                        </button>
                        <button class="btn btn-warning" type="button">
                            <a href="" style="color: black">
                                <i class="fa-solid fa-trash-can"> </i>

                            </a>
                        </button>
                        <button class="btn btn-success" type="button">
                            <a href="" style="color: black">
                                <i class="fa-solid fa-eye"> </i>
                            </a>
                        </button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}