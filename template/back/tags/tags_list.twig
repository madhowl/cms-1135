{% extends "layout.twig" %}
{% block content %}
    <a class="btn btn-primary btn-lg" href="/admin/tags/new">Добавить метку</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Имя метки</th>
            <th scope="col">Статей с этой меткой</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tag_list %}
            <tr>

                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.count }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a href="" style="color: black"
                               class="btn btn-outline-success"
                               data-coreui-toggle="tooltip" data-coreui-placement="left"
                               title="Редактировать">
                                <i class="fa-solid fa-pencil"> </i>
                            </a>
                            <a href=""
                               style="color: black"
                               class="btn btn-outline-warning"
                               data-coreui-toggle="tooltip" data-coreui-placement="top"
                               title="Удалить">
                                <i class="fa-solid fa-trash-can"> </i>
                            </a>
                            <a href=""
                               style="color: black"
                               class="btn btn-outline-info"
                               data-coreui-toggle="tooltip" data-coreui-placement="right"
                               title="Просмотреть">
                                <i class="fa-solid fa-eye"> </i>
                            </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}