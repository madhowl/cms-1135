{% extends "layout.twig" %}
{% block content %}


    <table class="table">
        <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Имя метки</th>
            <th scope="col">Статей с этой меткой</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tag_list %}
            <tr>

                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.count }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <button class="btn btn-danger" type="button">
                            <a href="">
                                <i class="fa-solid fa-pencil"></i>
                                &nbsp;Редактировать
                            </a>
                        </button>
                        <button class="btn btn-warning" type="button">
                            <a href="">
                                <i class="fa-solid fa-trash"></i>&nbsp;Удалить
                            </a>
                        </button>
                        <button class="btn btn-success" type="button">
                            <a href="">
                                <i class="fa-solid fa-pencil"></i>
                                &nbsp;Пpосмотреть
                            </a>
                        </button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}