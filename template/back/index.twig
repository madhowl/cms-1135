{% extends "layout.twig" %}
{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="text-medium-emphasis-inverse text-end mb-4">
                        <svg class="icon icon-xxl">
                            <use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-people"></use>
                        </svg>
                    </div>
                    <div class="fs-4 fw-semibold">{{ articles.count }}6</div><small class="text-medium-emphasis-inverse text-uppercase fw-semibold">Всего статей</small>
                    <div class="progress progress-white progress-thin mt-3">
                        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-->
        <div class="col-sm-6 col-md-6">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="text-medium-emphasis-inverse text-end mb-4">
                        <svg class="icon icon-xxl">
                            <use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-user-follow"></use>
                        </svg>
                    </div>
                    <div class="fs-4 fw-semibold">{{ category.count }}4</div><small class="text-medium-emphasis-inverse text-uppercase fw-semibold">Всего категорий</small>
                    <div class="progress progress-white progress-thin mt-3">
                        <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row-->
{% endblock %}